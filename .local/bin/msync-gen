#!/bin/sh
if [ -z "$1" ] || [ -h = "$1" ] || ! [ -d "$1" ]
  then echo "Usage: $0 <dir> <dest.sh>"
  else ( cd "$1"
    echo \#!/bin/sh
    find . | tail -n+2 | while read -r it
      do qd=$(echo "$it" | sed "s/'/\\\'/")
        stat -c "chmod =%a '$qd'" "$it"
        # TODO: add times and other if needed
    done ) >"$2"
fi
